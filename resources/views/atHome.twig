{% extends 'templates/app.twig' %}

{% block content %}

        <!--================Categories Product Area ====================-->
        <section class="no_sidebar_2column_area">
            <div class="container">     
                <h1>Safety at home</h1> 
                <div class="two_column_product">
                    <div class="row">
                       {% for index, product in products %}
                            {% if product.category == 'atHome'%}
